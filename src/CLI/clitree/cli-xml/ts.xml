<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE CLISH_MODULE [
<!ENTITY START_PORT_ID "1">
<!ENTITY MAX_PORT_ID "32">
<!ENTITY START_SUB_PORT_ID "1">
<!ENTITY MAX_SUB_PORT_ID "4">
<!ENTITY MAX_MTU "9216">
]>
<CLISH_MODULE xmlns="http://www.dellemc.com/sonic/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xi="http://www.w3.org/2001/XInclude" xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema http://www.dellemc.com/sonic/XMLSchema/clish.xsd">

  <VIEW name="configure-tam-view">
         <COMMAND name="int-ifa-ts" help="TAM INT IFA TS configuration" view="configure-tam-int-ifa-ts-view" viewid="int-ifa-ts">
         </COMMAND>
  </VIEW>
  
    <VIEW name="enable-view">
    <COMMAND name="show tam int-ifa-ts" help="Show TAM IFA info"/>	    
    <COMMAND name="show tam int-ifa-ts supported" help="Show TAM IFA TS feature info" mode="subcommand" ptype="SUBCOMMAND">
      <ACTION>python $SONIC_CLI_ROOT/sonic-cli-tam-int-ifa-ts.py get_tam_int_ifa_ts_supported</ACTION>
    </COMMAND>
    <COMMAND name="show tam int-ifa-ts flow" help="Show TAM IFA TS flow info" mode="subcommand" ptype="SUBCOMMAND">
      <PARAM name="name" help="Name of the flow" ptype="STRING_32" optional="true"> </PARAM>
      <ACTION>
        if test "${name}" = "all" ; then
	  python $SONIC_CLI_ROOT/sonic-cli-tam-int-ifa-ts.py get_sonic_tam_int_ifa_ts_sonic_tam_int_ifa_ts_tam_int_ifa_ts_flow_table show_tam_int_ifa_ts_flow.j2; 
        elif test -z "${name}"; then
	  python $SONIC_CLI_ROOT/sonic-cli-tam-int-ifa-ts.py get_sonic_tam_int_ifa_ts_sonic_tam_int_ifa_ts_tam_int_ifa_ts_flow_table show_tam_int_ifa_ts_flow.j2; 
        else
	  python $SONIC_CLI_ROOT/sonic-cli-tam-int-ifa-ts.py get_list_sonic_tam_int_ifa_ts_sonic_tam_int_ifa_ts_tam_int_ifa_ts_flow_table_tam_int_ifa_ts_flow_table_list ${name} show_tam_int_ifa_ts_flow.j2; 
        fi
      </ACTION>
    </COMMAND>
    <COMMAND name="show tam int-ifa-ts status" help="Show TAM IFA TS Status" mode="subcommand" ptype="SUBCOMMAND">
      <ACTION>python $SONIC_CLI_ROOT/sonic-cli-tam-int-ifa-ts.py get_tam_ifa_ts_status;</ACTION>
    </COMMAND>
    <COMMAND name="show tam int-ifa-ts statistics" help="Show TAM IFA TS Statistics" mode="subcommand" ptype="SUBCOMMAND">
      <PARAM name="name" help="Name of the flow" ptype="STRING_32"> </PARAM>
      <ACTION>
	   python $SONIC_CLI_ROOT/ts.py -show -statistics -flow ${name} -templ -showstatisticsflow.j2;
      </ACTION>
    </COMMAND>	    
  </VIEW>

  <VIEW name="configure-tam-int-ifa-ts-view"
        prompt="${SYSTEM_NAME}(config-int-ifa-ts)# "
        depth="3">

        <NAMESPACE ref="configure-view"
                help="false"
                completion="false"/>

         <COMMAND name="no"
              help="Negate a command or set its defaults">
         </COMMAND>

          <COMMAND name="no flow"
                help="Remove Flow"
                 >
	   <PARAM
	       name="flow-name"
	       help="Name of the flow"
	       ptype="STRING"
		   >
           </PARAM>

	   <ACTION>
		   if test "${flow-name}" = "all"; then
		   python $SONIC_CLI_ROOT/sonic-cli-tam-int-ifa-ts.py delete_list_sonic_tam_int_ifa_ts_sonic_tam_int_ifa_ts_tam_int_ifa_ts_flow_table_tam_int_ifa_ts_flow_table_list;
		   else
		   python $SONIC_CLI_ROOT/sonic-cli-tam-int-ifa-ts.py delete_sonic_tam_int_ifa_ts_sonic_tam_int_ifa_ts_tam_int_ifa_ts_flow_table_tam_int_ifa_ts_flow_table_list ${flow-name};
		   fi
	   </ACTION>

         </COMMAND>

          <COMMAND name="feature"
                help="Enable or Disable a feature"
                 >
          <PARAM
                 name="feature-options"
                 help=""
                 ptype="SUBCOMMAND"
                 mode="switch"
                 >

                <PARAM
                   name="enable"
                   help="Enable the feature"
                   ptype="SUBCOMMAND"
                   mode="subcommand"
                   >
                </PARAM>

                <PARAM
                   name="disable"
                   help="Disable the feature"
                   ptype="SUBCOMMAND"
                   mode="subcommand"
                   >
                </PARAM>
         </PARAM>
         <ACTION> if test "${feature-options}" = "enable"; then
		  python $SONIC_CLI_ROOT/sonic-cli-tam-int-ifa-ts.py patch_sonic_tam_int_ifa_ts_sonic_tam_int_ifa_ts_tam_int_ifa_ts_feature_table_tam_int_ifa_ts_feature_table_list_enable feature True;
	          elif test "${feature-options}" = "disable"; then
		  python $SONIC_CLI_ROOT/sonic-cli-tam-int-ifa-ts.py patch_sonic_tam_int_ifa_ts_sonic_tam_int_ifa_ts_tam_int_ifa_ts_feature_table_tam_int_ifa_ts_feature_table_list_enable feature False;
	          fi 
         </ACTION>
         </COMMAND>

         <COMMAND
         name="flow"
         help="Configure Flow parameters"
         >

         <PARAM
                   name="flow-name"
                   help="Name of the flow"
                   ptype="STRING"
                   >
               </PARAM>

               <PARAM
                   name="acl-table"
                   help="Configure acl table name"
                   ptype="SUBCOMMAND"
                   mode="subcommand"
                   >
               </PARAM>

              <PARAM
                   name="acl-table-name"
                   help="ACL Table Name"
                   ptype="STRING"
                   >
              </PARAM>
               <PARAM
                   name="acl-rule"
                   help="Configure acl rule name"
                   ptype="SUBCOMMAND"
                   mode="subcommand"
                   >
              </PARAM>
              <PARAM
                   name="acl-rule-name"
                   help="ACL Rule Name"
                   ptype="STRING"
                   >
              </PARAM>

	  <ACTION> python $SONIC_CLI_ROOT/sonic-cli-tam-int-ifa-ts.py patch_sonic_tam_int_ifa_ts_sonic_tam_int_ifa_ts_tam_int_ifa_ts_flow_table_tam_int_ifa_ts_flow_table_list  ${flow-name} ${acl-table-name} ${acl-rule-name} </ACTION>    
         </COMMAND>
  </VIEW>

</CLISH_MODULE>
