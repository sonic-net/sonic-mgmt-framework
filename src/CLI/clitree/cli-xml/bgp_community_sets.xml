                                    ptype="SUBCOMMAND"
                                    mode="subcommand"
                                    >
                                </PARAM>
                                <PARAM
                                    name="all"
                                    help="All command"
                                    ptype="SUBCOMMAND"
                                    mode="subcommand"
                                    >
                                </PARAM>
                            </PARAM>
                        </PARAM>
                    </PARAM>
                </PARAM>
            </PARAM>

            <PARAM
                name="expanded"
                help="Add a expanded community list entry"
                ptype="SUBCOMMAND"
                mode="subcommand"
                >
                <PARAM
                    name="community-expanded-list-name"
                    help="Communty list name"
                    ptype="STRING"
                    >
                    <PARAM
                        name="line"
                        help="LINE An ordered list as a regular-expression"
                        ptype="STRING"
                        >
                    </PARAM>
                </PARAM>
            </PARAM>
        </PARAM>
    <ACTION>
        if test "${bgp-subcommands}" = "standard"; then&#xA;
            python $SONIC_CLI_ROOT/sonic-cli-bgp-community.py bgp_community_standard ${community-list-name} ${__full_line}&#xA;

        elif test "${bgp-subcommands}" = "expanded"; then&#xA;
            python $SONIC_CLI_ROOT/sonic-cli-bgp-community.py bgp_community_expanded ${community-expanded-list-name} ${line}&#xA;

        else&#xA;
            builtin="clish_nop"&#xA;
        fi
    </ACTION>
    </COMMAND>

    <COMMAND
        name="bgp as-path-list"
        help="BGP autonomous system path"
        >
        <PARAM
            name="as-path-list-name"
            help="Name of as-path-list"
            ptype="STRING"
            >
            <PARAM
                name="regex"
                help="Regular expression to match the BGP AS paths"
                ptype="SUBCOMMAND"
                mode="subcommand"
                >
                <PARAM
                    name="regx-id"
                    help="Regular expression"
                    ptype="STRING"
                    >
                </PARAM>
            </PARAM>
        </PARAM>
    <ACTION>
        python $SONIC_CLI_ROOT/sonic-cli-bgp-community.py bgp_as_path_list ${as-path-list-name} ${regx-id}&#xA;
    </ACTION>
    </COMMAND>

    <COMMAND
        name="no bgp"
        help="bgp command list">
    <ACTION>
        builtin=clish_nop"
    </ACTION>
    </COMMAND>

    <COMMAND
        name="no bgp community-list"
        help="Delete bgp community-list entry">
        <PARAM
            name="bgp-subcommands"
            help="BGP subcommands"
            mode="switch"
            ptype="SUBCOMMAND"
            >
            <PARAM
                name="standard"
                help="Delete a standard community list entry"
                ptype="SUBCOMMAND"
                mode="subcommand"
                >
                <PARAM
                    name="community-list-name"
                    help="Communty list name"
                    ptype="STRING"
                    >
                </PARAM>
            </PARAM>
            <PARAM
                name="expanded"
                help="Delete a expanded community list entry"
                ptype="SUBCOMMAND"
                mode="subcommand"
                >
                <PARAM
                    name="community-expanded-list-name"
                    help="Communty list name"
                    ptype="STRING"
                    >
                </PARAM>
            </PARAM>
        </PARAM>    
    <ACTION>
        if test "${bgp-subcommands}" = "standard"; then&#xA;
            python $SONIC_CLI_ROOT/sonic-cli-bgp-community.py bgp_community_standard_delete ${community-list-name}&#xA;

        elif test "${bgp-subcommands}" = "expanded"; then&#xA;
            python $SONIC_CLI_ROOT/sonic-cli-bgp-community.py bgp_community_expanded_delete ${community-expanded-list-name}&#xA;

        else&#xA;
            builtin="clish_nop"&#xA;
        fi
    </ACTION>
    </COMMAND>

    <COMMAND
        name="no bgp as-path-list"
        help="Deleting bgp autonomous system path"
        >
        <PARAM
            name="as-path-list-name"
            help="Name of as-path-list"
            ptype="STRING"
            >
        </PARAM>
    <ACTION>
        python $SONIC_CLI_ROOT/sonic-cli-bgp-community.py bgp_as_path_list_delete ${as-path-list-name)&#xA;
    </ACTION>
