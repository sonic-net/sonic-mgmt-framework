                                help="Community number aa:nn format 0..65535:0..65535"
                                ptype="AA_NN"
                                optional="true"
                                >
                            </PARAM>
                            <PARAM
                                name="no-advertise"
                                help="Do not advertise to any peer (well-known community)"
                                ptype="SUBCOMMAND"
                                mode="subcommand"
                                optional="true"
                                >
                            </PARAM>
                            <PARAM
                                name="no-export"
                                help="Do not export to next AS (well-known community)"
                                ptype="SUBCOMMAND"
                                mode="subcommand"
                                optional="true"
                                >
                            </PARAM>
                            <PARAM
