                                ptype="SUBCOMMAND"
                                mode="subcommand"
                                optional="true"
                                >
                            </PARAM>
                            <PARAM
                                name="any-all subcommands"
                                help="Any/all command"
                                ptype="SUBCOMMAND"
                                mode="switch"
                                order="true"
                                optional="true"
                                >
                                <PARAM
                                    name="any"
                                    help="Any command"
                                    ptype="SUBCOMMAND"
                                    mode="subcommand"
                                    >
                                </PARAM>
                                <PARAM
                                    name="all"
                                    help="All command"
                                    ptype="SUBCOMMAND"
                                    mode="subcommand"
                                    >
