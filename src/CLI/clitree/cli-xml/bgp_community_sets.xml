                                help="Any/all command"
                                ptype="SUBCOMMAND"
                                mode="switch"
                                order="true"
                                optional="true"
                                >
                                <PARAM
                                    name="any"
                                    help="Any command"
                                    ptype="SUBCOMMAND"
                                    mode="subcommand"
                                    >
                                </PARAM>
                                <PARAM
                                    name="all"
                                    help="All command"
                                    ptype="SUBCOMMAND"
                                    mode="subcommand"
                                    >
                                </PARAM>
                            </PARAM>
                        </PARAM>
                        <PARAM
                            name="no-export"
                            help="Do not export to next AS (well-known community)"
                            ptype="SUBCOMMAND"
                            mode="subcommand"
                            >
                            <PARAM
                                name="aann"
