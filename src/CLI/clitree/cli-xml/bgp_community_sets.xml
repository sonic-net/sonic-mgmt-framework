                                ptype="AA_NN"
                                optional="true"
                                >
                            </PARAM>
                            <PARAM
                                name="local-AS"
                                help="Do not send outside local AS (well-known community)"
                                ptype="SUBCOMMAND"
                                mode="subcommand"
                                optional="true"
                                >
                            </PARAM>
                            <PARAM
