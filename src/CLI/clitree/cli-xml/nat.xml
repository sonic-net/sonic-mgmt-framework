<CLISH_MODULE
    xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
    http://www.dellemc.com/sonic/XMLSchema/clish.xsd"
    >
    <PTYPE
    name="TYPE"
    method="select"
    pattern="snat dnat"
    help="NAT type"/>

    <PTYPE
    name="PORT_TYPE"
    method="select"
    pattern="tcp udp"
    help="NAT Port type"/>

   <VIEW
       name="configure-view"
       >
    <!-- nat commands -->
    <COMMAND
        name="nat"
	view="configure-nat-view"
        help="NAT configuration"
        />

   </VIEW>

   <VIEW
        name="configure-nat-view"
        prompt="${SYSTEM_NAME}(conf-nat) "
        depth="2"
        >
        <NAMESPACE
            ref="configure-view"
            help="false"
            completion="false"
            />
        <COMMAND
            name="no"
            help="Negate a command or set its defaults"
	    />
        <COMMAND
            name="enable"
            help="Enable NAT feature"
	    >
        <ACTION>python $SONIC_CLI_ROOT/sonic-cli-nat.py patch_openconfig_nat_nat_instances_instance_config_enable True</ACTION>
        </COMMAND>

	<COMMAND
            name="no enable"
            help="Disable NAT feature"
            >
        <ACTION>python $SONIC_CLI_ROOT/sonic-cli-nat.py patch_openconfig_nat_nat_instances_instance_config_enable False</ACTION>

       </COMMAND>

       <COMMAND
         name="timeout"
         help="Configure NAT entry aging timeout in seconds"
         mode="subcommand"
         ptype="SUBCOMMAND"
         >
         <PARAM
             name="timeout-value"
             help="NAT Timeout"
             ptype="UINT"
             >
         </PARAM>
         <ACTION>python $SONIC_CLI_ROOT/sonic-cli-nat.py patch_openconfig_nat_nat_instances_instance_config_timeout ${timeout-value}</ACTION>
       </COMMAND>


       <COMMAND
         name="no timeout"
         help="Set default NAT entry aging timeout in seconds"
	 >
         <ACTION>python $SONIC_CLI_ROOT/sonic-cli-nat.py patch_openconfig_nat_nat_instances_instance_config_timeout 600</ACTION>
     </COMMAND>

     <COMMAND
         name="tcp-timeout"
         help="Configure TCP NAT entry aging timeout in seconds"
         mode="subcommand"
         ptype="SUBCOMMAND"
         >
         <PARAM
             name="tcp-timeout-value"
             help="TCP NAT Timeout"
             ptype="UINT"
             >
         </PARAM>
         <ACTION>python $SONIC_CLI_ROOT/sonic-cli-nat.py patch_openconfig_nat_nat_instances_instance_config_tcp_timeout ${tcp-timeout-value}</ACTION>
     </COMMAND>

     <COMMAND
         name="no tcp-timeout"
         help="Set Default TCP NAT entry aging timeout in seconds"
         >
         <ACTION>python $SONIC_CLI_ROOT/sonic-cli-nat.py patch_openconfig_nat_nat_instances_instance_config_tcp_timeout 86400</ACTION>
     </COMMAND>

      <COMMAND
         name="udp-timeout"
         help="Configure UDP NAT entry aging timeout in seconds"
         mode="subcommand"
         ptype="SUBCOMMAND"
         >
         <PARAM
             name="udp-timeout-value"
             help="UDP NAT Timeout"
             ptype="UINT"
             >
         </PARAM>
         <ACTION>python $SONIC_CLI_ROOT/sonic-cli-nat.py patch_openconfig_nat_nat_instances_instance_config_udp_timeout ${udp-timeout-value}</ACTION>
     </COMMAND>

      <COMMAND
         name="no udp-timeout"
         help="Set Default UDP NAT entry aging timeout in seconds"
         >
         <ACTION>python $SONIC_CLI_ROOT/sonic-cli-nat.py patch_openconfig_nat_nat_instances_instance_config_udp_timeout 300</ACTION>
     </COMMAND>

      <COMMAND
         name="pool"
         help="Create NAT Pool"
         mode="subcommand"
         ptype="SUBCOMMAND"
         >
         <PARAM
             name="pool-name"
             help="NAT Pool name"
             ptype="STRING"
             >
         </PARAM>
         <PARAM
             name="global-ip-range"
             help="Global IP range"
             ptype="STRING"
             >
         </PARAM>
         <PARAM
             name="global-port-range"
             help="Global Port Range"
             ptype="STRING"
             optional="true"
             >
         </PARAM>

         <ACTION> 
                 python $SONIC_CLI_ROOT/sonic-cli-nat.py patch_openconfig_nat_nat_instances_instance_nat_pool_nat_pool_entry_config ${pool-name} ${global-ip-range} ${global-port-range}&#xA;
     </ACTION>
     </COMMAND>


     <COMMAND
         name="no pool"
         help="Remove NAT Pool"
         mode="subcommand"
         ptype="SUBCOMMAND"
         >
         <PARAM
             name="pool-name"
             help="NAT Pool name"
             ptype="STRING"
             >
         </PARAM>
         <ACTION>
             python $SONIC_CLI_ROOT/sonic-cli-nat.py delete_openconfig_nat_nat_instances_instance_nat_pool_nat_pool_entry_config ${pool-name}
         </ACTION>
     </COMMAND>

     <COMMAND
         name="no pools"
         help="Remove all NAT Pools"
	 >
     <ACTION>python $SONIC_CLI_ROOT/sonic-cli-nat.py delete_openconfig_nat_nat_instances_instance_nat_pool</ACTION>
     </COMMAND>

     <COMMAND
         name="binding"
         help="Create binding between an ACL and a NAT pool"
         mode="subcommand"
         ptype="SUBCOMMAND"
         >
	 <PARAM
             name="binding-name"
             help="NAT Binding name"
             ptype="STRING"
             >
         </PARAM>
         <PARAM
             name="pool-name"
             help="NAT Pool name"
             ptype="STRING"
             >
         </PARAM>
         <PARAM
             name="acl-name"
             help="ACL Name"
             ptype="STRING"
             >
         </PARAM>
         <PARAM
             name="natType"
             help=""
             ptype="TYPE"
             optional="true"
             >
         </PARAM>
         <PARAM
             name="twice-nat-id"
             help="Twice NAT ID"
             ptype="SUBCOMMAND"
             mode="subcommand"
             optional="true"
             >
             <PARAM
                 name="twice-nat-id-value"
                 help="Twice NAT ID value"
                 ptype="UINT"
                 >
             </PARAM>
         </PARAM>

         <ACTION> 
             if test "${natType}" = ""; then&#xA;
                 python $SONIC_CLI_ROOT/sonic-cli-nat.py patch_openconfig_nat_nat_instances_instance_nat_acl_pool_binding_nat_acl_pool_binding_entry_config ${binding-name} ${pool-name} ${acl-name}&#xA; 
             elif test "${twice-nat-id-value}" = ""; then&#xA;
                 python $SONIC_CLI_ROOT/sonic-cli-nat.py patch_openconfig_nat_nat_instances_instance_nat_acl_pool_binding_nat_acl_pool_binding_entry_config ${binding-name} ${pool-name} ${acl-name} ${natType}&#xA;
             else&#xA;
                 python $SONIC_CLI_ROOT/sonic-cli-nat.py patch_openconfig_nat_nat_instances_instance_nat_acl_pool_binding_nat_acl_pool_binding_entry_config ${binding-name} ${pool-name} ${acl-name} ${natType} ${twice-nat-id-value}&#xA;
             fi&#xA;
     </ACTION>
     </COMMAND>

      <COMMAND
         name="no binding"
         help="Remove NAT Binding"
         mode="subcommand"
         ptype="SUBCOMMAND"
         >
         <PARAM
             name="bind-name"
             help="NAT Binding name"
             ptype="STRING"
             >
         </PARAM>
         <ACTION>
             python $SONIC_CLI_ROOT/sonic-cli-nat.py delete_openconfig_nat_nat_instances_instance_nat_acl_pool_binding_nat_acl_pool_binding_entry_config ${bind-name}
         </ACTION>
     </COMMAND>

     <COMMAND
         name="no bindings"
         help="Remove all NAT Bindings"
     >
     <ACTION>
         python $SONIC_CLI_ROOT/sonic-cli-nat.py delete_openconfig_nat_nat_instances_instance_nat_acl_pool_binding
     </ACTION>
     </COMMAND>

     <COMMAND
         name="static"
         help="Add static NAT entry"
         mode="subcommand"
         ptype="SUBCOMMAND"
         >
         <PARAM
             name="static-subcommands"
             help="Static NAT subcommands"
             mode="switch"
             ptype="SUBCOMMAND"
             >
         <PARAM
             name="basic"
             help="Static NAT"
             ptype="SUBCOMMAND"
             mode="subcommand"
             >

             <PARAM
                 name="global-ip"
                 help="Global IP"
                 ptype="IP_ADDR"
                 >
             </PARAM>

             <PARAM
                 name="local-ip"
                 help="Local IP"
                 ptype="IP_ADDR"
                 >
             </PARAM>

             <PARAM
                 name="natType"
                 help=""
                 ptype="TYPE"
                 optional="true"
                 >
             </PARAM>

             <PARAM
                 name="twice-nat-id"
                 help="Twice NAT ID"
                 ptype="SUBCOMMAND"
                 mode="subcommand"
                 optional="true"
                 >
                 <PARAM
                     name="twice-nat-id-value"
                     help="Twice NAT ID value"
                     ptype="UINT"
                     >
                 </PARAM>
             </PARAM>
         </PARAM>


         <PARAM
             name="natPortType"
             help=""
             ptype="PORT_TYPE"
             >
            <PARAM
                 name="global-ip"
                 help="Global IP"
                 ptype="IP_ADDR"
                 >
             </PARAM>

             <PARAM
                 name="global-port"
                 help="Global Port"
                 ptype="UINT"
                 >
             </PARAM>

             <PARAM
                 name="local-ip"
                 help="Local IP"
                 ptype="IP_ADDR"
                 >
             </PARAM>

             <PARAM
                 name="local-port"
                 help="Local Port"
                 ptype="UINT"
                 >
             </PARAM>

             <PARAM
                 name="natType"
                 help=""
                 ptype="TYPE"
                 optional="true"
                 >
             </PARAM>

             <PARAM
                 name="twice-nat-id"
                 help="Twice NAT ID"
                 ptype="SUBCOMMAND"
                 mode="subcommand"
                 optional="true"
                 >
                 <PARAM
                     name="twice-nat-id-value"
                     help="Twice NAT ID value"
                     ptype="UINT"
                     >
                 </PARAM>
             </PARAM>
         </PARAM>
     </PARAM>
    <ACTION> 
       if test "${static-subcommands}" = "basic"; then&#xA;
           if test "${natType}" = ""; then&#xA;
               python $SONIC_CLI_ROOT/sonic-cli-nat.py patch_openconfig_nat_nat_instances_instance_nat_mapping_table_nat_mapping_entry_config ${global-ip} ${local-ip}&#xA;
           elif test "${twice-nat-id-value}" = ""; then&#xA;
               python $SONIC_CLI_ROOT/sonic-cli-nat.py patch_openconfig_nat_nat_instances_instance_nat_mapping_table_nat_mapping_entry_config ${global-ip} ${local-ip} ${natType}&#xA;
           else&#xA;
               python $SONIC_CLI_ROOT/sonic-cli-nat.py patch_openconfig_nat_nat_instances_instance_nat_mapping_table_nat_mapping_entry_config ${global-ip} ${local-ip} ${natType} ${twice-nat-id-value}&#xA;
           fi&#xA;
      else&#xA;
          if test "${natType}" = ""; then&#xA;
              python $SONIC_CLI_ROOT/sonic-cli-nat.py patch_openconfig_nat_nat_instances_instance_napt_mapping_table_napt_mapping_entry_config ${global-ip} ${natPortType} ${global-port} ${local-ip} ${local-port}&#xA;
          elif test "${twice-nat-id-value}" = ""; then&#xA;
              python $SONIC_CLI_ROOT/sonic-cli-nat.py patch_openconfig_nat_nat_instances_instance_napt_mapping_table_napt_mapping_entry_config ${global-ip} ${natPortType} ${global-port} ${local-ip} ${local-port} ${natType}&#xA;
          else&#xA;
              python $SONIC_CLI_ROOT/sonic-cli-nat.py patch_openconfig_nat_nat_instances_instance_napt_mapping_table_napt_mapping_entry_config ${global-ip} ${natPortType} ${global-port} ${local-ip} ${local-port} ${natType} ${twice-nat-id-value}&#xA;
          fi&#xA;
      fi&#xA;
    </ACTION>
    </COMMAND>

     <COMMAND
         name="no static"
         help="Remove static NAT entry"
         mode="subcommand"
         ptype="SUBCOMMAND"
         >
         <PARAM
             name="no-static-subcommands"
             help="Remove Static NAT subcommands"
             mode="switch"
             ptype="SUBCOMMAND"
             >
             <PARAM
                 name="all"
                 help="Remove all static configurations"
                 ptype="SUBCOMMAND"
                 mode="subcommand"
                 >
             </PARAM>
             <PARAM
                 name="basic"
                 help="Static NAT"
                 ptype="SUBCOMMAND"
                 mode="subcommand"
                 >

                 <PARAM
                     name="global-ip"
                     help="Global IP"
                     ptype="IP_ADDR"
                 >
                 </PARAM>

             </PARAM>
             
             <PARAM
                 name="natPortType"
                 help=""
                 ptype="PORT_TYPE"
                 >
                <PARAM
                     name="global-ip"
                     help="Global IP"
                     ptype="IP_ADDR"
                     >
                 </PARAM>

                 <PARAM
                     name="global-port"
                     help="Global Port"
                     ptype="UINT"
                     >
                 </PARAM>

             </PARAM>
         </PARAM>

   <ACTION> 
       if test "${no-static-subcommands}" = "all"; then&#xA;
           python $SONIC_CLI_ROOT/sonic-cli-nat.py delete_openconfig_nat_nat_instances_instance_nat_mapping_table ${global-ip}&#xA;
           python $SONIC_CLI_ROOT/sonic-cli-nat.py delete_openconfig_nat_nat_instances_instance_napt_mapping_table ${global-ip} ${natPortType} ${global-port} &#xA;
       elif test "${no-static-subcommands}" = "basic"; then&#xA;
           python $SONIC_CLI_ROOT/sonic-cli-nat.py delete_openconfig_nat_nat_instances_instance_nat_mapping_table_nat_mapping_entry_config_internal_address ${global-ip}&#xA;
       else&#xA;
           python $SONIC_CLI_ROOT/sonic-cli-nat.py delete_openconfig_nat_nat_instances_instance_napt_mapping_table_napt_mapping_entry_config ${global-ip} ${natPortType} ${global-port}&#xA;
       fi&#xA;
   </ACTION>

     </COMMAND>
   </VIEW>

     <VIEW name="enable-view">
    <!--show nat -->
    <COMMAND
         name="show nat"
         help="Show NAT info"
         >
         <PARAM
             name="nat-subcommands"
             help="NAT subcommands"
             mode="switch"
             ptype="SUBCOMMAND"
             >
             <!-- show nat translations -->
             <PARAM
                 name="translations"
                 help="NAT Translations"
                 ptype="SUBCOMMAND"
                 mode="subcommand"
                 >
                 <PARAM
                     name="count"
                     help="NAT Translations Count"
                     ptype="SUBCOMMAND"
                     mode="subcommand"
                     optional="true"
                     >
                 </PARAM>
             </PARAM>

             <!-- show nat statistics -->
             <PARAM
                 name="statistics"
                 help="NAT Statistics"
                 ptype="SUBCOMMAND"
                 mode="subcommand"
                 >
             </PARAM>

              <!-- show nat config -->
             <PARAM
                 name="config"
                 help="NAT Configurations"
                 ptype="SUBCOMMAND"
                 mode="subcommand"
                 >
                 <PARAM
                     name="config-subcommands"
                     help="NAT Config subcommands"
                     mode="switch"
                     ptype="SUBCOMMAND"
                     optional="true"
                     >
                     <PARAM
                         name="static"
                         help="NAT Static config"
                         ptype="SUBCOMMAND"
                         mode="subcommand"
                         >
                     </PARAM>
                     <PARAM
                         name="pool"
                         help="NAT pool config"
                         ptype="SUBCOMMAND"
                         mode="subcommand"
                         >
                     </PARAM>
                     <PARAM
                         name="bindings"
                         help="NAT Static bindings"
                         ptype="SUBCOMMAND"
                         mode="subcommand"
                         >
                     </PARAM>
                     <PARAM
                         name="globalvalues"
                         help="NAT Static globals"
                         ptype="SUBCOMMAND"
                         mode="subcommand"
                         >
                     </PARAM>
                     <PARAM
                         name="zones"
                         help="NAT zones"
                         ptype="SUBCOMMAND"
                         mode="subcommand"
                         >
                     </PARAM>
                 </PARAM>
             </PARAM>
         </PARAM>
         <ACTION builtin="clish_nop"></ACTION>
         <ACTION>
          if test "${nat-subcommands}" = "config"; then&#xA;
                  if test "${config-subcommands}" = "globalvalues"; then&#xA;
                      python $SONIC_CLI_ROOT/sonic-cli-nat.py get_openconfig_nat_nat_instances_instance_config show_nat_global_config.j2&#xA;
                  elif test "${config-subcommands}" = "bindings"; then&#xA;
                      python $SONIC_CLI_ROOT/sonic-cli-nat.py get_openconfig_nat_nat_instances_instance_nat_acl_pool_binding show_nat_bindings.j2&#xA;
                  elif test "${config-subcommands}" = "pool"; then&#xA;
                      python $SONIC_CLI_ROOT/sonic-cli-nat.py get_openconfig_nat_nat_instances_instance_nat_pool show_nat_pool.j2&#xA;
                  fi&#xA;
          fi&#xA;
      </ACTION>
     </COMMAND>

   </VIEW>
</CLISH_MODULE>

