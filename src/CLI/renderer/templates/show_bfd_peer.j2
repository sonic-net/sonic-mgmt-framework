{{'%12sReceive interval: %s'|format(' ', vars.localRx)}}
{{'%12sTransmission interval: %s'|format(' ', vars.localTx)}}
{{'%12sEcho transmission interval: %s'|format(' ', vars.localEchoTx)}}
{{'%8sRemote timers:'|format(' ')}}
{{'%12sDetect-multiplier: %s'|format(' ', vars.remoteMult)}}
{{'%12sReceive interval: %s'|format(' ', vars.remoteRx)}}
{{'%12sTransmission interval: %s'|format(' ', vars.remoteTx)}}
