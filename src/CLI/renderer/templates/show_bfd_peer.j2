{% if vars.update({'vrf': ""}) %}{% endif %}
{% if vars.update({'interface': ""}) %}{% endif %}
{% if vars.update({'remoteId': ""}) %}{% endif %}
{% if vars.update({'downtime': ""}) %}{% endif %}
